<h3><%= @restaurant.name %>
</h3>

<p><strong>Address:  </strong>  <%= @restaurant.address %></p>
<p><strong>Type:  </strong><%= @restaurant.category %></p>
<p><strong>Phone:  </strong><%= @restaurant.phone_number %></p>

<h5>User reviews : </h5>
<ul>
  <% @reviews.each do |review| %>
    <li>
      <%= review.content %>
      <p><strong>Score: </strong>
      <%= review.rating %></p>
    </li>
    <% end %>
</ul>

<h3>Please add a review here for</h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content %>
<%= f.input :rating %>
<%= f.submit "Submit review", class: "btn btn-success"%>
<% end %>
