<%= link_to "Back to Restaurant", restaurant_path(params[:restaurant_id]), class: "btn btn-alert"%>
<h3>Please add a review here for</h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content %>
<%= f.input :rating %>
<%= f.submit "Submit review", class: "btn btn-success"%>
<% end %>
